<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.shanshui.smartcommunity.android.model.PropertyIssuePhoto" />

        <variable
            name="photo"
            type="PropertyIssuePhoto" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/property_issue_phote"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@color/brown"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/property_issue_phote"
            app:layout_constraintLeft_toRightOf="@+id/property_issue_phote" />
    </android.support.constraint.ConstraintLayout>
</layout>
